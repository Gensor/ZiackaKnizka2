<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/znamkuj_pozadie">

    <RelativeLayout
        android:id="@+id/relativelayout_pridajpredmet_telo"
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="14dp"
        android:background="@mipmap/pridajpredmet_telo">

        <Spinner
            android:id="@+id/spinner_predmety"
            android:layout_width="266dp"
            android:layout_height="35dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="24dp"
            android:background="#FFFFFF"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="40dp" />

        <Spinner
            android:id="@+id/spinner_triedy"
            android:layout_width="266dp"
            android:layout_height="35dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="25dp"
            android:background="#FFFFFF"
            android:paddingVertical="10dp"
            android:textAlignment="gravity"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="40dp" />

        <TextView
            android:id="@+id/pridajPredmet_triedy"
            android:layout_width="266dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="69dp"
            android:text="Triedy: "
            android:textAlignment="textStart"
            android:textSize="20sp"
            tools:layout_editor_absoluteY="235dp" />

        <TextView
            android:id="@+id/pridajPredmet_predmety"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:text="Predmety: "
            android:textAlignment="textStart"
            android:textSize="20sp"
            tools:layout_editor_absoluteY="30dp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imagebutton_pridajpredmet_ok"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/relativelayout_pridajpredmet_telo"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/imagebutton_znamkuj_pridaj" />

</RelativeLayout>