<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/linearlayout_hodnotenie_meno"
            android:layout_width="match_parent"
            android:layout_height="147dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_hodnotenie_predmet"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView_hodnotenie_menopriezvisko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_hodnotenie_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/linearlayout_hodnotenie_pridaj"
            android:layout_below="@+id/linearlayout_hodnotenie_meno"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/listview_hodnotenie"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_hodnotenie_pridaj"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editText_Znamkuj_nazov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:ems="10"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText_Znamkuj_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:ems="10"
                android:inputType="number" />

            <ImageButton
                android:id="@+id/imageButton_Znamkuj_pridaj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/add" />
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>